BasedOnStyle: Google
Language: Cpp
Standard: c++20
ColumnLimit: 100
IndentWidth: 4
TabWidth: 4
UseTab: Never
BreakBeforeBraces: Allman
BraceWrapping:
  AfterFunction: true
  AfterClass: true
  AfterNamespace: true
  AfterEnum: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
AllowAllParametersOfDeclarationOnNextLine: true
AlignAfterOpenBracket: Align
PointerAlignment: Left
SortIncludes: false
ReflowComments: true
SpacesBeforeTrailingComments: 1
SpacesInContainerLiterals: false
SpaceBeforeParens: ControlStatements
SpaceInEmptyParentheses: false
